<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="post" class="course-form">
  <div class="input-field">
    <input name="title" id="title" type="text" class="validate" required value="{{course.title}}">
    <label for="title">Course name</label>
    <span class="helper-text" data-error="Enter name"></span>
  </div>
  <div class="input-field">
    <input name="price" id="price" type="text" class="validate" required min="1" value="{{course.price}}">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter price"></span>
  </div>
  <div class="input-field">
    <input name="img" id="img" type="text" class="validate" required value="{{course.img}}">
    <label for="img">Image url</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>
  <input type="hidden" name="id" value="{{course.id}}">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <button type="submit" class="btn btn-primary">Edit Course</button>
</form>

<form action="/courses/remove" method="post">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <input type="hidden" name="id" value="{{course.id}}">
  <button class="btn red">Delete</button>
</form>