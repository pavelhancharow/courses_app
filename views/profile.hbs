<h1>Profile</h1>

<div class="row">
  <div class="col s6">
    {{#if user.avatarUrl}}
    <img class="avatar" src="/{{user.avatarUrl}}" alt="avatar-{{user.name}}">
    {{else}}
    <p>No avatar</p>
    {{/if}}
  </div>
  <div class="col s6">
    <form action="/profile" method="POST" enctype="multipart/form-data">
      <p>Your email: <strong>{{user.email}}</strong></p>

      <div class="input-field">
        <input name="name" id="name" type="text" class="validate" required value="{{user.name}}">
        <label for="name">Your name</label>
        <span class="helper-text" data-error="Enter your name"></span>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Avatar</span>
          <input type="file" name="avatar">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

      <input type="hidden" name="_csrf" value="{{csrf}}">

      <button class="btn">Update</button>
    </form>
  </div>
</div>