<div class="auth">
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s6"><a class="active" href="#login">Log In</a></li>
        <li class="tab col s6"><a href="#register">Sign Up</a></li>
      </ul>
    </div>
    <div id="login" class="col l10 m8 s12 offset-s0">
      {{#if loginError}}
      <p class="alert">{{loginError}}</p>
      {{/if}}
      <h3>Enter the store</h3>
      <form action="/auth/login" method="post" novalidate>
        <div class="input-field">
          <input name="email" id="email" type="email" class="validate" required>
          <label for="email">Your email address</label>
          <span class="helper-text" data-error="Enter your email address"></span>
        </div>
        <div class="input-field">
          <input name="password" id="password" type="password" class="validate" required>
          <label for="password">Password</label>
          <span class="helper-text" data-error="Enter your password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <p><a href="/auth/reset">Forgot your password?</a></p>

        <button class="btn btn-primary" type="submit">Log In</button>
      </form>
    </div>
    <div id="register" class="col l10 m8 s12 offset-s0">
      {{#if registerError}}
      <p class="alert">{{registerError}}</p>
      {{/if}}
      <h3>Create new account</h3>
      <form action="/auth/register" method="post" novalidate>
        <div class="input-field">
          <input name="name" id="name" type="text" class="validate" required>
          <label for="name">Your name</label>
          <span class="helper-text" data-error="Enter your name"></span>
        </div>
        <div class="input-field">
          <input name="email" id="remail" type="email" class="validate" required>
          <label for="remail">Your email address</label>
          <span class="helper-text" data-error="Enter your email address"></span>
        </div>
        <div class="input-field">
          <input name="password" id="rpassword" type="password" class="validate" required>
          <label for="rpassword">Password</label>
          <span class="helper-text" data-error="Enter your password"></span>
        </div>
        <div class="input-field">
          <input name="confirm" id="confirm" type="password" class="validate" required>
          <label for="confirm">Confirm password</label>
          <span class="helper-text" data-error="Confirm your password"></span>
        </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button class="btn btn-primary" type="submit">Sign Up</button>
      </form>
    </div>
  </div>
</div>